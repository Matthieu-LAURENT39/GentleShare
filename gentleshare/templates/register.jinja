{% extends 'base.jinja' %}
{% from '_macro.jinja' import form_field with context %}

{% block title %}
{{ super() }} - Inscription
{% endblock %}

{% block content %}
{# TODO: Put a better registration form here #}

<section class="bg-white dark:bg-gray-900">
<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto h-screen md:h-auto lg:py-0">
    <a href="{{url_for('main.index')}}" class="menu-logo" style="height: 100px;">
            <img src="{{url_for('static', filename='logo.png')}}" alt="GentleShare" />
          </a>
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
          <div class="p-6 space-y-8 md:space-y-8 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white text-center">
                  Créez-vous un compte
              </h1>
              <form class="space-y-4 md:space-y-6" action="{{url_for('main.register')}}" method="POST">
                   {{ form.csrf_token }}
                    {{form_field(form.username, form)}}
                    {{form_field(form.password, form)}}
                    {{form_field(form.password_confirm, form)}}
                  <button type="submit" class="w-full text-white bg-blue-500 hover:bg-blue    -600 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    <a href="{{url_for('main.index')}}">S'inscrire</a>
                    </button>
                  <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                      Déjà un compte ? <a href="{{url_for('main.login')}}" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Se connecter</a>
                  </p>
              </form>
          </div>
      </div>
  </div>
</section>
{% endblock content %}