{% extends 'base.jinja' %}

{% block title %}
{{ super() }} - Liste
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <!-- First container -->
        <div class="col-md-6">
            <h2 class="text-center">Fichiers</h2>
            <a href="{{url_for('main.upload_file')}}" class="btn btn-primary">Ajouter un fichier</a>
            {% if file_list %}
            <ul>
                {% for file in file_list %}
                <li><a href="{{file.file_url}}">{{file.stored_file.filename}}</a> ({{file.pretty_file_size}})</li>
                {% endfor %}
            </ul>
            {% else %}
            <p class="fw-lighter fst-italic">Rien pout l'instant.</p>
            {% endif %}
        </div>
        <!-- Second container -->
        <div class="col-md-6">
            <h2 class="text-center">Cours</h2>
            TODO!
        </div>
    </div>
</div>
{% endblock content %}