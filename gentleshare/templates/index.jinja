{% extends 'base.jinja' %}

{% block title %}
{{ super() }} - Liste
{% endblock %}

{% block content %}
<div class="container">
    <div class="mb-3">
        <label for="search-bar" class="form-label">Recherche</label>
        <input type="text" class="form-control" id="search-bar">
    </div>
    <div class="row">
        <!-- First container -->
        <div class="col-md-6">
            <h2 class="text-center">Cours</h2>
            {% if course_list %}
            {% for course in course_list %}
            <div class="card my-2" data-title="{{course.title | escape}}"
                data-description="{{course.description | escape}}">
                <div class="card-header">
                    {{course.education_level.display_name | escape}} - {{course.subject.display_name | escape}}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{course.title | escape}}</h5>
                    <p class="card-text">{{course.description | escape}}</p>
                </div>
                <div class="card-footer text-body-secondary">
                    Posté par {{course.owner.username | escape}}
                </div>
            </div>
            {% endfor %}
            {% else %}
            <p class="fw-lighter fst-italic">Rien pout l'instant.</p>
            {% endif %}
        </div>
        <!-- Second container -->
        <div class="col-md-6">
            <h2 class="text-center">Fichiers</h2>
            {% if file_list %}
            {% for file in file_list %}
            <div class="card my-2" data-title="{{file.title | escape}}" data-description="{{file.description | escape}}"
                data-order="{{file.uploaded_at.timestamp()}}">
                <div class="card-header">
                    {{file.education_level.display_name | escape}} - {{file.subject.display_name | escape}}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{file.title | escape}} ({{file.stored_file.filename | escape}})</h5>
                    <p class="card-text">Size: {{file.pretty_file_size}}</p>
                    <p class="card-text">{{file.description | escape}}</p>
                    <a href="{{file.file_url}}" class="btn btn-primary">Télécharger</a>
                </div>
                <div class="card-footer text-body-secondary">
                    Posté par {{file.uploader.username | escape}} le {{file.uploaded_at.strftime('%d/%m/%Y %H:%M:%S')}}
                    UTC
                </div>
            </div>
            {% endfor %}
            {% else %}
            <p class="fw-lighter fst-italic">Rien pout l'instant.</p>
            {% endif %}
        </div>
    </div>
</div>

<script>
    const search_bar = document.getElementById('search-bar');
    const searchables = document.querySelectorAll('[data-title]');

    search_bar.addEventListener('input', () => {
        const search_query = search_bar.value.toLowerCase();
        searchables.forEach(searchable => {
            if (searchable.dataset.title.toLowerCase().includes(search_query)
                || searchable.dataset.description.toLowerCase().includes(search_query)) {
                searchable.style.display = 'block';
            } else {
                searchable.style.display = 'none';
            }
        });
    });
</script>
{% endblock content %}