<!doctype html>
{# Use light theme, as it fits better with our color palette #}
<html lang="fr" data-bs-theme="light">

<head>
    {% block head %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}GentleShare{% endblock %}</title>
    {# Logo #}
    <link rel="icon" href="{{url_for('static', filename='logo.png')}}">

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    {% endblock %}
</head>


<body>
    {% block header %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">GentleShare</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{url_for('main.index')}}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Partager</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{url_for('main.list_files_classes')}}">Liste</a>
                    </li>
                    {% if not current_user.is_authenticated %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{url_for('main.login')}}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{url_for('main.register')}}">Inscription</a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{url_for('main.logout')}}">Déconnexion</a>
                        {% endif %}

                </ul>
            </div>
        </div>
    </nav>
    {% endblock header %}

    {% block flashed_messages %}
    {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
    <div id="flashed-messages-container" class="container">
        {% for category, message in messages %}
        <div class="alert alert-{{category}} mb-2" role="alert">
            {{message}}
        </div>
        {% endfor %}
    </div>
    {% endif %}
    {% endwith %}
    {% endblock flashed_messages %}

    <main class="container pt-5 pb-3">
        {% block content required %}{% endblock content %}
    </main>


    {% block footer%}
    <footer class="footer mt-auto py-3 bg-light fixed-bottom">
        <div class="container text-center">
            <span class="text-muted">© 2024 GentleShare. All rights reserved.</span>
        </div>
    </footer>
    {% endblock footer %}

</body>

</html>