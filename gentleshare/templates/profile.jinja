{% extends 'base.jinja' %}
{% from '_macro.jinja' import form_field with context %}


{% block title %}
{{ super() }} - Page de profil
{% endblock %}

{% block head %}
{{ super() }}
{# Custom CSS#}
<link rel="stylesheet" href="{{url_for('static', filename='css/profile.css')}}">
{# Custom JS#}
<script src="{{url_for('static', filename='js/profile.js')}}"></script>
{% endblock %}

{% block content %}
<div class="container mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        <!-- Colonne de gauche -->
        <div>
            <h1 class="text-xl font-semibold">Informations personnelles</h1>
            <form action="{{url_for('main.profile')}}" method="POST" class="mt-4">
                {{form_field(form.display_name, form)}}
                <br>
                {{form_field(form.email, form)}}
                <br>
                {{form_field(form.about_me, form)}}
                <br>
                <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded">Submit</button>
            </form>
        </div>

        <!-- Colonne de droite -->
        <div>
            <h1
                class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">
                Double Authentification </h1>
            <div>
                <h3 class="text-lg font-semibold">TOTP</h3>
                <img id="totp-qr-code" class="blurred" src="{{ qrcode(current_user.totp_uri) }}" width="40%"
                    height="40%">
            </div>
        </div>

    </div>
</div>
{% endblock content %}