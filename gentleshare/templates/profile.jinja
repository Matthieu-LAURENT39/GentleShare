{% extends 'base.jinja' %}
{% from '_macro.jinja' import form_field with context %}


{% block title %}
{{ super() }} - Page de profil
{% endblock %}

{% block head %}
{{ super() }}
<link rel="stylesheet" href="{{url_for('static', filename='css/profile.css')}}">
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">

        <div class="col-md">
            <h1> Informations personnelles </h1>
            <form action="{{url_for('main.profile')}}" method="POST">
                {{form_field(form.display_name, form)}}
                <br>
                {{form_field(form.about, form)}}
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-md-1 border-end me-5"></div>
        <div class="col-md">
            <h1> Param√®tres </h1>
            <div class="container">
                <h3>TOTP</h3>
                <img id="totp-qr-code" class="blurred" src="{{ qrcode(current_user.totp_uri) }}" width="40%"
                    height="40%">
            </div>
        </div>
    </div>
</div>

<script>
    const totp_qr_code = document.getElementById('totp-qr-code');
    totp_qr_code.addEventListener('click', () => {
        totp_qr_code.style.filter = 'none';
    });
</script>
{% endblock content %}