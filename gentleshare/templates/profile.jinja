{% extends 'base.jinja' %}

{% block title %}
{{ super() }} - Page de profil
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        
        <div class="col-md">
        <h1> Informations personnelles </h1>
            <div class="list-group" id="list-tab" role="tablist">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Nom</span>
                    </div>
                    <input type="text" size="100" class="form-control" placeholder="{{ name }}" aria-label="name" aria-describedby="basic-addon1">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Prénom</span>
                    </div>
                    <input type="text" size="100" class="form-control" placeholder="{{ first_name }}" aria-label="first_name" aria-describedby="basic-addon1">
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="{{ email }}" aria-label="email" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <span class="input-group-text" size="100" id="basic-addon2">@gmail.com</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1 border-end me-5"></div>
        <div class="col-md">
        <h1> Paramètres </h1>
            <div class="container">
                <h3>2FA Double authentification {{current_user.username | safe}}</h3>
                <h3>TOTP</h3>
                <img src="{{ qrcode(current_user.totp_uri) }}" width="20%" height="20%">
            </div>
        </div>
    </div>
</div>
{% endblock content %}