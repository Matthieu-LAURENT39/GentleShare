{% extends 'base.jinja' %}

{% block title %}
{{ super() }} - Inscription
{% endblock %}

{% block content %}
<div class="container">
    <h2>Inscription</h2>

<form action="{{url_for('main.inscription')}}" method="POST">
    {{ form.csrf_token }}
    {{ form.username.label }} {{ form.username(size=20) }}
    {{ form.password.label }} {{ form.password(size=20) }}
    <input type="submit" value="Go">
</form>
</div>
{% endblock content %}